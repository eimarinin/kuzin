{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build OpenCV C++",
			"type": "shell",
			"command": "g++",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"-I",
				"C:/OpenCV-MinGW-Build/include",
				"-L",
				"C:/OpenCV-MinGW-Build/x64/mingw/lib",
				"-lopencv_calib3d452",
				"-lopencv_core452",
				"-lopencv_dnn452",
				"-lopencv_features2d452",
				"-lopencv_flann452",
				"-lopencv_highgui452",
				"-lopencv_imgcodecs452",
				"-lopencv_imgproc452",
				"-lopencv_ml452",
				"-lopencv_objdetect452",
				"-lopencv_photo452",
				"-lopencv_stitching452",
				"-lopencv_video452",
				"-lopencv_videoio452"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Компиляция C++ с OpenCV"
		}
	]
}